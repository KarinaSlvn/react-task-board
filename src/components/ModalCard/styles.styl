.modal-card
  position fixed
  z-index 1
  left 0
  top 0
  width 100%
  height 100%
  overflow auto
  background-color rgb(0,0,0)!important
  background-color rgba(0,0,0,0.8)!important

  .card
    margin auto
    width 300px
    position relative
    z-index 2

    .close-modal
      color #4c4c4c
      position absolute
      right 10px
      top 10px
