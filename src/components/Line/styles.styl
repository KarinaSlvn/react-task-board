@import "../../assets/styles/variables.styl"

.lane
  display flex
  flex-direction column
  background $bg-line
  border-radius 8px
  width 300px
  border 1px solid $color-border
  margin-top 10px

  &__title
    height  40px
    border-bottom 1px solid $color-border
    width 100%
    display flex
    align-items center
    padding 0 10px
    text-transform uppercase
    font-weight bold
    font-size 0.8rem
    color: #464646
    position relative

    .count-card
      position absolute
      right 10px
      top 50%
      transform translateY(-50%)
      width 20px
      height 20px
      background $bg-count-card
      align-items center
      justify-content center
      border-radius 3px
      color: $white-color

    .add-cards
      background $white-color
      color: $black-color
      font-weight bold
      font-size 1.2rem
      border 1px solid $color-border
      height 20px
      width 25px
      display flex
      align-items center
      justify-content center
      padding 0
      border-radius 3px
      position absolute
      right 40px

  .cards
    padding 10px
    flex-direction column