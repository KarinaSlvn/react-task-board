@import "../../assets/styles/variables.styl"

.search-cards
  width 100%
  height 55px
  padding 10px

  .search-title
    height 100%
    background $color-border
    width 10%
    justify-content center
    align-items center
    font-weight bold
    font-size 0.9rem
    border 1px solid #b4b4b4
    border-top-left-radius 5px
    border-bottom-left-radius 5px

  .refresh-search
    height 100%
    background $color-border
    border 1px solid #b4b4b4
    border-left none
    width 3%

  .search-input
    height 100%
    width 84%
    border 1px solid #b4b4b4
    border-left none
    border-right none
    padding 10px

  .search-btn
    color: $black-color
    display flex
    align-items center
    justify-content center
    width 3%
    background $color-border
    border 1px solid #b4b4b4
    border-top-right-radius 5px
    border-bottom-right-radius 5px
